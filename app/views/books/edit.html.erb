<div class="container">
<div class="row">
  <div class="col-md-8 col-md-offset-2">

<h2>Editing Book</h2>

<%= form_for @book do |f| %>

                          <% if @book.errors.any? %>
                            <%= @book.errors.count %>errors
                            <ul>
                             <% @book.errors.full_messages.each do |message| %>
                               <li><%= message %></li>
                             <% end %>
                             </ul>
                     <% end %>



    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, autofocus: true ,class: "form-control book_title"%>
    </div>

    <div class="form-group">
      <%= f.label :opinion %><br />
      <%= f.text_area :body, autofocus: true ,class: "form-control book_body"%>
    </div>



    <div class="actions">
    <%= f.submit "Update book", class: "btn btn-primary" %>
    </div>
<% end %>


</div>
</div>
</div>
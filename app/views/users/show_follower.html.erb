<div class="container">
    <h2>Followers</h2>
    <p><%= @user.name %>がフォローされているユーザー</p>

        <table class="table table-striped">
        	          <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
      </tr>
                </thead>

              <% @user.followers.each do |user| %>
              <tbody>
            <tr>
              <td>
                 <div><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format:'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></div>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "show",user_path(user.id), class: "user_#{user.id}" %>
              </td>
            </tr>
        </tbody>
<% end %>
</table>
</div>
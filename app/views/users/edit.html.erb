<h1>Users info</h1>
<%= form_for @user do |f| %>


                          <% if @user.errors.any? %>
                          <%= @user.errors.count %>errors
                                  <ul>
                                  <% @user.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                  <% end %>
                                  </ul>
                                <% end %>


    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true ,class: "form-control name"%>
    </div>

    <div class="form-group">
      <%= f.label :image %><br />
      <%= f.attachment_field :profile_image,class: "user_image" %>
    </div>

    <div class="form-group">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, autofocus: true ,class: "form-control introduction"%>
    </div>


    <div class="actions">
    <%= f.submit "Update User", class: "btn btn-primary" %>
    </div>
<% end %>
